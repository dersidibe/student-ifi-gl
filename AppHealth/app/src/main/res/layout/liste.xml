<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout android:id="@+id/FrameLayoutPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"

        android:gravity="left|center">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="120.0dip"
            android:layout_height="70.0dip"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            android:contentDescription="default image"/>

    </FrameLayout>

    <TextView
        android:ellipsize="marquee"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="1.0dip"
        android:text="salutddddddddddddffffffffffffffffffffff"
        android:lines="2"
        android:scrollHorizontally="true"
        android:layout_toRightOf="@id/FrameLayoutPoster"
        android:textColor="#000000"
        android:textSize="@dimen/Large_Text"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:text="djjjhjhjhjhfjhQJHJHQKJHKJF"
        android:lines="2"
        android:layout_toRightOf="@id/FrameLayoutPoster"
        android:layout_below="@id/name"
        android:textColor="#006600"
        android:textSize="@dimen/Petit_Text"
        />
</RelativeLayout>
